<div>
  <h1 class="text-center">Pets for Adoption</h1>
</div>

{{#each postpets as |postpet| }}
 <form class="form new-postpet-form">
  <div class="form-group">
    <div class="col-md-6">
    <div class="well">
      
    <h2>
      <a href="/postpet/{{postpet.id}}">{{postpet.title}}</a>
    </h2>
    <p>
          <img class="img-responsive" src="{{postpet.image}}" alt="postpet image" width="80" height="80" />
     {{postpet.description}} 
    </p>
     <p> Contact: {{format_phone postpet.phone}}</p> 
    <p>Created on {{format_date postpet.date_created}}</p> 
  </div>
  </div>
</div>
{{/each}}

<script src ="./js/profile.js"></script>